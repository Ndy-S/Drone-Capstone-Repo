{
    "firestore": {
        "rules": "firestore.rule",
        "indexes": "firestore.indexes.json"
    },
    "functions": [{
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ],
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ]
    }],
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 8080
        }
    }
}